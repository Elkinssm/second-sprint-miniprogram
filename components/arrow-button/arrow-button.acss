.btn-account {
  width: 100%;
  height: 10%;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  border-radius: 15rpx;
  border: 1px solid #ccc;
  padding: 20rpx 10rpx 20rpx 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #ccc;
}

.info-account {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  gap: 10rpx;
}

.btn-account image {
  width: 70rpx;
  height: 70rpx;
}